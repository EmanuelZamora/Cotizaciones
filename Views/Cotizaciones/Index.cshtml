@model IEnumerable<Concesionaria.Models.Cotizaciones>

@{
    ViewBag.Title = "Cotizaciones";
}

<h2>Cotizaciones</h2>

<p>
    @Html.ActionLink("Nueva Cotización", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>Código Cotización</th>
        <th>Nombre del Cliente</th>
        <th>Código del Vehículo</th>
        <th>Banco</th>
        <th>Aseguradora</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdCotizacion</td>
            <td>@item.Clientes.Nombre</td>
            <td>@item.Vehiculo.Modelo</td>
            <td>@item.Bancos.Nombre</td>
            <td>@item.Aseguradoras.Nombre</td>
            <td>@item.Fecha</td>
            <td>@item.Estado</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdCotizacion }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.IdCotizacion }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCotizacion }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>