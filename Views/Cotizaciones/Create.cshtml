@model Concesionaria.Models.Cotizaciones

@{
    ViewBag.Title = "Crear Cotización";
}

<h2>Crear Cotización</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cotizaciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Cliente -->
        <div class="form-group">
            @Html.Label("Nombre del cliente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdCliente, (SelectList)ViewBag.IdCliente, "Seleccione un cliente", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Vehículo -->
        <div class="form-group">
            @Html.Label("Código del vehículo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdVehiculo, (SelectList)ViewBag.IdVehiculo, "Seleccione un vehículo", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdVehiculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Banco -->
        <div class="form-group">
            @Html.Label("Banco", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdBanco, (SelectList)ViewBag.IdBanco, "Seleccione un banco", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdBanco, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Aseguradora -->
        <div class="form-group">
            @Html.Label("Aseguradora", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdAseguradora, (SelectList)ViewBag.IdAseguradora, "Seleccione una aseguradora", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdAseguradora, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Fecha -->
        <div class="form-group">
            @Html.Label("Fecha de cotización", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Estado -->
        <div class="form-group">
            @Html.Label("Estado", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botón -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}